{
    "manifest_version": 3,
    "name": "Trade Call Widget",
    "version": "1.0.0",
    "description": "A widget for creating structured trade calls",
    "permissions": [
      "storage",
      "clipboardWrite"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "assets/icons/icon.png",
        "48": "assets/icons/icon.png",
        "128": "assets/icons/icon1.png"
      }
    },
    "icons": {
      "16": "assets/icons/icon.png",
      "48": "assets/icons/icon.png",
      "128": "assets/icons/icon1.png"
    },
    "background": {
      "service_worker": "background.js"
    }
  }